<!-- component -->
<main id="content" role="main" class="w-full max-w-md mx-auto p-6 h-[100vh] flex flex-col justify-center">
    <!-- <div> -->
    <div class="mt-7 bg-white  rounded-xl shadow-lg dark:bg-gray-800 dark:border-gray-700">
        <div class="p-4 sm:p-7">
            <div class="text-center">
                <h1 class="block text-2xl font-bold text-gray-800 dark:text-white">Forgot password?</h1>
                <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
                    Remember your password?
                    <a class="text-blue-600 decoration-2 hover: font-medium" href="/api/v1/auth/login">
                        Login here
                    </a>
                </p>
            </div>

            <div class="mt-5">
                <form action="/api/v1/auth/forgot" method="POST">
                    <div class="grid gap-y-4">
                        <div>
                            <label for="input" id="label"
                                class="block text-sm font-bold ml-1 mb-2 dark:text-white">Email address
                            </label>
                            <div class="relative">
                                <input type="email" id="input" name="email"
                                    class="py-3 px-4 block w-full border-2 border-gray-200 rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 shadow-sm"
                                    required aria-describedby="email-error" placeholder="Enter your email" min="9999"
                                    autocomplete="email" minlength="6">
                            </div>
                            <p class="invisible text-xs text-red-600 mt-2 min-h-[1rem] font-semibold" id="email-error">
                                Please
                                include a valid
                                email
                                address so we can get back to you</p>
                        </div>
                        <input type="hidden" name="resend" value="false">
                        <input type="submit" value="Sent OTP"
                            class="py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-blue-600 text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm dark:focus:ring-offset-gray-800">
                    </div>
                </form>
            </div>
        </div>
    </div>

</main>
